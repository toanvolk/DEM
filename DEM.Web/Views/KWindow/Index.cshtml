@using  DEM.App.Kendo;
@model WindowDto;

@{
    Layout = null;
}

<kendo-window name="@Model.Name"
              title="@Model.Title"
              draggable="@Model.Draggable"
              resizable="@Model.Draggable"
              width="@Model.Width"
              modal="true"
              visible="true"
              on-close="@Model.CloseEvent"
              on-activate="@Model.ActivateEvent"
              on-refresh="@Model.RefreshEvent"              
              actions="@Model.Actions">
    <content>
        <partial name="/Views/Category/_add.cshtml" model="@Model.DataBridge" />
    </content>
    <popup-animation enabled="false" />
</kendo-window>