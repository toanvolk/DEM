@using DEM.App
@model Tuple<List<RootCategoryDto>>

<link href="~/lib/app-assets/css/pages/dem-home.css" rel="stylesheet" />
<div class="content-wrapper">
    <div class="content-wrapper-before"></div>
    <div class="content-header row">
    </div>
    <div class="content-body" style="padding-top:10px">
        <!-- Chart -->
        <div class="row match-height" hidden>
            <div class="col-12">
                <div class="">
                    <div id="gradient-line-chart1" class="height-250 GradientlineShadow1"></div>
                </div>
            </div>
        </div>
        <!-- Chart -->
        <!-- eCommerce statistic -->
        <div class="row">
            <div class="col-md-4">
                <div class="card pull-up ecom-card-1 bg-white dem-root-category" id="@Model.Item1[0].Name.ToLower()" onclick="demIndex.clickEvent(this, demIndex.actionType.ShowCaption)" data-caption="@Model.Item1[0].Caption" data-style="danger" data-icon-category="icon-basket-loaded" data-root-category-type="@Model.Item1[0].Name">
                    <div class="card-content ecom-card2 height-180">
                        <h5 class="text-muted danger position-absolute p-1">@Model.Item1[0].Caption</h5>
                        <div>
                            <i class="ft-pie-chart danger font-large-1 float-right p-1"></i>
                        </div>
                        <div class="progress-stats-container ct-golden-section height-75 position-relative pt-3  ">
                            <div id="progress-stats-bar-chart"></div>
                            <div id="progress-stats-line-chart" class="progress-stats-shadow"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card pull-up ecom-card-1 bg-white dem-root-category" id="@Model.Item1[1].Name.ToLower()" onclick="demIndex.clickEvent(this, demIndex.actionType.ShowCaption)" data-caption="@Model.Item1[1].Caption" data-style="info" data-icon-category="icon-wallet" data-root-category-type="@Model.Item1[1].Name">
                    <div class="card-content ecom-card2 height-180">
                        <h5 class="text-muted info position-absolute p-1">@Model.Item1[1].Caption</h5>
                        <div>
                            <i class="ft-activity info font-large-1 float-right p-1"></i>
                        </div>
                        <div class="progress-stats-container ct-golden-section height-75 position-relative pt-3">
                            <div id="progress-stats-bar-chart1"></div>
                            <div id="progress-stats-line-chart1" class="progress-stats-shadow"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card pull-up ecom-card-1 bg-white dem-root-category" id="@Model.Item1[2].Name.ToLower()" onclick="demIndex.clickEvent(this,demIndex.actionType.ShowCaption)" data-caption="@Model.Item1[2].Caption" data-style="warning" data-icon-category="ft-pocket" data-root-category-type="@Model.Item1[2].Name">
                    <div class="card-content ecom-card2 height-180">
                        <h5 class="text-muted warning position-absolute p-1">@Model.Item1[2].Caption</h5>
                        <div>
                            <i class="ft-shopping-cart warning font-large-1 float-right p-1"></i>
                        </div>
                        <div class="progress-stats-container ct-golden-section height-75 position-relative pt-3">
                            <div id="progress-stats-bar-chart2"></div>
                            <div id="progress-stats-line-chart2" class="progress-stats-shadow"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ eCommerce statistic -->
        <!-- Product Summary and Chat -->
        <div class="row match-height dem-category" id="dem-category-for">
            <div class="col-md-12">
                <h5 class="card-title text-bold-700 my-2 dem-category-title" onclick="demIndex.clickEvent(this, demIndex.actionType.DirectToCategoryPage)">Product Summary</h5>
                <div class="row" hidden id="dem-category-template">
                    <div class="col-md-3 dem-category-item" >
                        <div class="card dem-card">
                            <div class="card-content">
                                <div class="card-body">
                                    <div class="media d-flex">
                                        <div class="align-self-top">
                                            <i class="{{style}} {{icon}} icon-opacity font-large-4"></i>
                                        </div>
                                        <div class="media-body text-right align-self-bottom">
                                            <h1 class="d-block mb-1 font-medium-1 {{style}}">{{categoryName}}</h1>
                                            <div class="dem-description-style">
                                                <p class="mb-0">{{description}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row dem-category-card">                    
                    <div class="col-md-3 dem-category-action">
                        <div class="card dem-card dem-add-item" onclick="demIndex.clickEvent(this ,demIndex.actionType.Add)" data-toggle="modal" data-target="#dem-add-item-modal">
                            <div class="card-content">
                                <div class="card-body">
                                    <div class="media d-flex">
                                        <i class="icon-plus icon-opacity success font-large-4" style="margin: 0 auto;"></i>
                                    </div>
                                </div>
                            </div>
                            <h1 class="success mb-0" style="text-align: center;">
                                Thêm mới
                            </h1>
                        </div>
                        <div class="modal fade text-left" id="dem-add-item-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33" aria-hidden="true" style="display: none;">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <label class="modal-title text-text-bold-600 dem-modal-title" id="myModalLabel33">Tạo mới loại</label>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <form action="#">
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <input type="text" placeholder="Nhập tên" class="form-control" name="Name">
                                            </div>
                                            <div class="form-group">
                                                <textarea aria-label="Type your message here" class="form-control" placeholder="Nhập mô tả" rows="5" onchange="demIndex.changeEvent(this,demIndex.actionType.GetDescription)"></textarea>
                                                <input type="text" hidden name="Description">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="reset" class="btn btn-secondary " data-dismiss="modal" value="close">
                                            <button type="button" class="btn btn-primary dem-category-add-item" onclick="demIndex.clickEvent(this, demIndex.actionType.CreateCategory)">OK</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        $('#@Model.Item1[0].Name.ToLower()' + '.dem-root-category').click();
</script>